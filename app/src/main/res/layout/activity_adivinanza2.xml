<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/juego"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_editor_absoluteX="16dp"
    tools:context=".adiv.adivinanza2">
    <LinearLayout
        android:id="@id/complie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cont"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_renderMode="automatic"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="-30dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:rotation="90"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/opciones"
                    app:lottie_renderMode="automatic"
                    tools:ignore="MissingClass,RtlHardcoded,ImageContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="71dp"
                android:orientation="horizontal"
              app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/linearLayout4"
                tools:layout_editor_absoluteY="0dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/todo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints,ImageContrastCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:fontFamily="@font/gentium_book_basic_bold"
                    android:gravity="center"
                    android:text="@string/usuario1"
                    android:textAlignment="center"
                    android:textColor="@color/negro"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Space
                android:layout_width="0sp"
                android:layout_height="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:visibility="gone"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imagen"
                    android:visibility="gone"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center" />
                <Space
                    android:layout_width="10sp"
                    android:visibility="gone"
                    android:layout_height="0dp"/>
                <ImageView
                    android:id="@+id/imagen2"
                    android:visibility="gone"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center" />

            </LinearLayout>
            <Space
                android:layout_width="0sp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/adivinanza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gentium_book_basic_bold"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:gravity="center_horizontal" />
            <Space
                android:layout_width="0sp"
                android:layout_height="40dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="383dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:textAlignment="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:background="@color/teal_70011"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <Button
                                            android:id="@+id/btnuno3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/off"
                                            android:text="1"
                                            android:textColor="#A6FFFFFF"
                                            android:textSize="70dp" />

                                        <Button
                                            android:id="@+id/btndos3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:background="@drawable/off"
                                            android:textColor="#A6FFFFFF"
                                            android:text="2"
                                            android:textSize="70dp" />

                                        <Button
                                            android:id="@+id/btntres3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:background="@drawable/off"
                                            android:text="3"
                                            android:textColor="#A6FFFFFF"
                                            android:textSize="70dp" />
                                    </LinearLayout>
                                    <Space
                                        android:layout_width="10sp"
                                        android:layout_height="0sp"/>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <Button
                                            android:id="@+id/btncuatro3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/off"
                                            android:text="4"
                                            android:textColor="#A6FFFFFF"
                                            android:textSize="70dp" />

                                        <Button
                                            android:id="@+id/btncinco3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:background="@drawable/off"
                                            android:text="5"
                                            android:textColor="#A6FFFFFF"
                                            android:textSize="70dp" />

                                        <Button
                                            android:id="@+id/btnseis3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:background="@drawable/off"
                                            android:text="6"
                                            android:textColor="#A6FFFFFF"
                                            android:textSize="70dp" />
                                    </LinearLayout>

                                </LinearLayout>
                                <Space
                                    android:layout_width="10sp"
                                    android:layout_height="0sp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:background="@drawable/barra"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <Button
                                            android:id="@+id/btnuno2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/off"
                                            android:text="1"
                                            android:textColor="#A6FFFFFF"
                                            android:textSize="70dp" />

                                        <Button
                                            android:id="@+id/btndos2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:background="@drawable/off"
                                            android:textColor="#A6FFFFFF"
                                            android:text="2"
                                            android:textSize="70dp" />

                                        <Button
                                            android:id="@+id/btntres2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:background="@drawable/off"
                                            android:text="3"
                                            android:textColor="#A6FFFFFF"
                                            android:textSize="70dp" />
                                    </LinearLayout>
                                    <Space
                                        android:layout_width="10sp"
                                        android:layout_height="0sp"/>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:orientation="vertical">

                                        <Button
                                            android:id="@+id/btncuatro2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/off"
                                            android:text="4"
                                            android:textColor="#A6FFFFFF"
                                            android:textSize="70dp" />

                                        <Button
                                            android:id="@+id/btncinco2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:background="@drawable/off"
                                            android:text="5"
                                            android:textColor="#A6FFFFFF"
                                            android:textSize="70dp" />

                                        <Button
                                            android:id="@+id/btnseis2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:background="@drawable/off"
                                            android:text="6"
                                            android:textColor="#A6FFFFFF"
                                            android:textSize="70dp" />
                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>
                    </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space
                android:layout_width="0sp"
                android:layout_height="10dp"/>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:orientation="horizontal">
             <TextView
                 android:id="@+id/verificar2"
                 android:layout_width="87dp"
                 android:layout_height="87dp"
                 android:layout_gravity="center"
                 android:background="@drawable/verifi"
                 android:fontFamily="@font/gentium_book_basic_bold"
                 android:hint="Verificar"
                 android:padding="10sp"
                 android:textColorHint="@color/transparent"
                 android:textSize="25dp" />
             <Space
                 android:layout_width="20sp"
                 android:layout_height="0dp"/>

             <TextView
                 android:id="@+id/reiniciar5"
                 android:layout_width="88dp"
                 android:layout_height="95dp"
                 android:layout_gravity="center"
                 android:background="@drawable/regresar"
                 android:fontFamily="@font/gentium_book_basic_bold"
                 android:hint="Intentar de nuevo"
                 android:padding="10sp"
                 android:textColorHint="@color/transparent"
                 android:textSize="25dp" />
         </LinearLayout>
            <EditText
                android:id="@+id/cadena2"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:ems="10"
                android:visibility="gone"
                android:layout_gravity="center"
                android:inputType="textNoSuggestions"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/pts2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/gentium_book_basic_bold"
                android:text="Puntaje: 0"

                android:textColor="#000"
                android:textSize="30dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>