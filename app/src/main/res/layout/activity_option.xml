<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_height="wrap_content"

android:layout_gravity="center_horizontal"
android:layout_width="wrap_content">


<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/tercero1"
    app:cardCornerRadius="16dp"
    app:cardMaxElevation="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:fontFamily="@font/gentium_book_basic_bold"
            android:gravity="center"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="Alumno"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="60sp"

            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
            app:layout_constraintVertical_bias="0.006"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="388dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">
                <Space
                    android:layout_width="0sp"
                    android:layout_height="30sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <LinearLayout
                            android:id="@+id/BtnM1"
                            android:layout_width="180dp"
                            android:layout_height="220dp"
                            android:layout_gravity="center"
                            android:background="@drawable/barra"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:background="@drawable/home"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gentium_book_basic_bold"
                                android:text="Menu"
                                android:textSize="35dp"
                                android:textColor="@color/negro"/>
                        </LinearLayout>
                        <Space
                            android:layout_width="10sp"
                            android:layout_height="0sp" />
                        <LinearLayout
                            android:id="@+id/BtnJ1"
                            android:layout_width="180dp"
                            android:layout_height="220dp"
                            android:layout_gravity="center"
                            android:background="@drawable/barra"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:background="@drawable/juegoss"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gentium_book_basic_bold"
                                android:text="Juegos"
                                android:textColor="@color/negro"  android:textSize="35dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <LinearLayout
                            android:id="@+id/BtnT1"
                            android:layout_width="180dp"
                            android:layout_height="220dp"
                            android:layout_gravity="center"
                            android:background="@drawable/barra"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:background="@drawable/traduccion"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gentium_book_basic_bold"
                                android:text="Traductor"
                                android:textColor="@color/negro"  android:textSize="35dp" />
                        </LinearLayout>
                        <Space
                            android:layout_width="10sp"
                            android:layout_height="0sp" />
                        <LinearLayout
                            android:id="@+id/BtnH1"
                            android:layout_width="180dp"
                            android:layout_height="220dp"
                            android:layout_gravity="center"
                            android:background="@drawable/barra"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:background="@drawable/history"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gentium_book_basic_bold"
                                android:text="Historia"
                                android:textColor="@color/negro"
                                android:textSize="35dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <Space
                    android:layout_width="0sp"
                    android:layout_height="30sp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>