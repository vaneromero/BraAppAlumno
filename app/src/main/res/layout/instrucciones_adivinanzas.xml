<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:background="#E8AC6B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:ignore="MissingConstraints,RtlSymmetry">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Instrucciones"
            android:fontFamily="@font/gentium_book_basic_bold"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="30dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textSize="24dp"
                android:fontFamily="@font/gentium_book_basic"
                android:text="En el centro de la pantalla encontraras una adivinanza con 4 posibles respuestas."
                android:textColor="#000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/pts5" />

            <Space
                android:layout_width="10sp"
                android:layout_height="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:fontFamily="@font/gentium_book_basic"
                android:text="Recibiras 10 puntos cada vez que selecciones las respuesta correcta."
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:fontFamily="@font/gentium_book_basic"
                android:text="Perderas 2 puntos cada vez que selecciones la respuesta incorrecta y en cambiar la adivinanza."
                android:textColor="#000" />

            <Space
                android:layout_width="10sp"
                android:layout_height="12sp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/pts2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:fontFamily="@font/gentium_book_basic_bold"
                android:text="Pulsa alrededor de la pantalla con 2 dedos para salir de las instrucciones..."
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>